<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:ThemeEditor.Converters;assembly=ThemeEditor"
             xmlns:views="clr-namespace:ThemeEditor.Views;assembly=ThemeEditor"
             xmlns:cb="clr-namespace:ThemeEditor.Controls.ColorBlender;assembly=ThemeEditor.Controls.ColorBlender"
             xmlns:cp="clr-namespace:ThemeEditor.Controls.ColorPicker;assembly=ThemeEditor.Controls.ColorPicker"
             Classes="themed">
    <UserControl.Resources>
        <converters:ColorToHexStringConverter x:Key="ColorToHexStringConverter"/>
    </UserControl.Resources>
    <UserControl.Styles>
        <StyleInclude Source="resm:ThemeEditor.Themes.BaseDark.xaml?assembly=ThemeEditor"/>
        <StyleInclude Source="resm:ThemeEditor.Controls.ColorPicker.ColorPicker.xaml?assembly=ThemeEditor.Controls.ColorPicker"/>
    </UserControl.Styles>
    <Grid ColumnDefinitions="*,8,300" Margin="8">
        <TabControl Grid.Column="0" Classes="main">
            <TabItem Header="Preview">
                <Border Classes="preview">
                    <views:ThemePreviewView x:Name="previewView"/>
                </Border>
            </TabItem>
            <TabItem Header="Export">
                <TextBox x:Name="exportText" DataContext="{Binding CurrentTheme}" Classes="export"/>
            </TabItem>
            <TabItem Header="ColorPicker">
                <Grid ColumnDefinitions="*,Auto">
                    <cp:ColorPicker x:Name="colorPicker" Grid.Column="0" Hue="180" Saturation="50" Value="50" Alpha="75" Margin="2"/>
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,50" Grid.Column="1" Margin="2">
                        <TextBlock Text="Hue" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Margin="2"/>
                        <TextBox Text="{Binding #colorPicker.Hue, Mode=TwoWay}" Grid.Row="0" Grid.Column="1" Margin="2"/>
                        <TextBlock Text="Saturation" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="2"/>
                        <TextBox Text="{Binding #colorPicker.Saturation, Mode=TwoWay}" Grid.Row="1" Grid.Column="1" Margin="2"/>
                        <TextBlock Text="Value" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" Margin="2"/>
                        <TextBox Text="{Binding #colorPicker.Value, Mode=TwoWay}" Grid.Row="2" Grid.Column="1" Margin="2"/>
                        <TextBlock Text="Alpha" VerticalAlignment="Center" Grid.Row="3" Grid.Column="0" Margin="2"/>
                        <TextBox Text="{Binding #colorPicker.Alpha, Mode=TwoWay}" Grid.Row="3" Grid.Column="1" Margin="2"/>
                        <TextBox Text="{Binding #colorPicker.Color, Mode=TwoWay, Converter={StaticResource ColorToHexStringConverter}}" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="2"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="ColorBlender">
                <Grid>
                    <cb:ColorBlender x:Name="colorBlender"/>
                </Grid>
            </TabItem>
        </TabControl>
        <GridSplitter Width="8" Grid.Column="1"/>
        <views:ThemeEditorView x:Name="editorView" Grid.Column="2"/>
    </Grid>
</UserControl>
