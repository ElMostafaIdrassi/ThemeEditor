<UserControl x:Class="ThemeEditor.MainView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ThemeEditor;assembly=ThemeEditor"
             xmlns:views="clr-namespace:ThemeEditor.Views;assembly=ThemeEditor"
             xmlns:cb="clr-namespace:ThemeEditor.Controls.ColorBlender;assembly=ThemeEditor.Controls.ColorBlender"
             xmlns:cp="clr-namespace:ThemeEditor.Controls.ColorPicker;assembly=ThemeEditor.Controls.ColorPicker"
             xmlns:cma="clr-namespace:ThemeEditor.ColorMatch.Algorithms;assembly=ThemeEditor.ColorMatch"
             mc:Ignorable="d"
             d:DesignWidth="900" d:DesignHeight="500"
             Classes="themed">
    <UserControl.Resources>
        <cma:Classic x:Key="ClassicAlgorithm"/>
        <cma:ColorExplorer x:Key="ColorExplorerAlgorithm"/>
        <cma:SingleHue x:Key="SingleHueAlgorithm"/>
        <cma:Complementary x:Key="ComplementaryAlgorithm"/>
        <cma:SplitComplementary x:Key="SplitComplementaryAlgorithm"/>
        <cma:Analogue x:Key="AnalogueAlgorithm"/>
        <cma:Triadic x:Key="TriadicAlgorithm"/>
        <cma:Square x:Key="SquareAlgorithm"/>
    </UserControl.Resources>
    <Grid ColumnDefinitions="*,8,350" Margin="8">
        <TabControl Grid.Column="0" Classes="main">
            <TabItem Header="Preview" Classes="main">
                <Border Classes="preview">
                    <views:ThemePreviewView x:Name="previewView"/>
                </Border>
            </TabItem>
            <TabItem Header="Export" Classes="main">
                <TextBox x:Name="exportText" DataContext="{Binding CurrentTheme}" Classes="export"/>
            </TabItem>
            <TabItem Header="Blend" Classes="main">
                <Grid RowDefinitions="40*,8,60*">
                    <Grid ColumnDefinitions="*,*" RowDefinitions="*,*,*,*" Grid.Row="0">
                        <cb:ColorBlender Algorithm="{StaticResource ClassicAlgorithm}" Color="{Binding #colorPicker.Color, Mode=OneWay}" Grid.Row="0" Grid.Column="0"/>
                        <cb:ColorBlender Algorithm="{StaticResource ColorExplorerAlgorithm}" Color="{Binding #colorPicker.Color, Mode=OneWay}" Grid.Row="0" Grid.Column="1"/>
                        <cb:ColorBlender Algorithm="{StaticResource SingleHueAlgorithm}" Color="{Binding #colorPicker.Color, Mode=OneWay}" Grid.Row="1" Grid.Column="0"/>
                        <cb:ColorBlender Algorithm="{StaticResource ComplementaryAlgorithm}" Color="{Binding #colorPicker.Color, Mode=OneWay}" Grid.Row="1" Grid.Column="1"/>
                        <cb:ColorBlender Algorithm="{StaticResource SplitComplementaryAlgorithm}" Color="{Binding #colorPicker.Color, Mode=OneWay}" Grid.Row="2" Grid.Column="0"/>
                        <cb:ColorBlender Algorithm="{StaticResource AnalogueAlgorithm}" Color="{Binding #colorPicker.Color, Mode=OneWay}" Grid.Row="2" Grid.Column="1"/>
                        <cb:ColorBlender Algorithm="{StaticResource TriadicAlgorithm}" Color="{Binding #colorPicker.Color, Mode=OneWay}" Grid.Row="3" Grid.Column="0"/>
                        <cb:ColorBlender Algorithm="{StaticResource SquareAlgorithm}" Color="{Binding #colorPicker.Color, Mode=OneWay}" Grid.Row="3" Grid.Column="1"/>
                    </Grid>
                    <GridSplitter Height="8" Grid.Row="1"/>
                    <cp:ColorPicker x:Name="colorPicker" Color="#CC119EDA" Grid.Row="2"/>
                </Grid>
            </TabItem>
        </TabControl>
        <GridSplitter Width="8" Grid.Column="1"/>
        <Grid RowDefinitions="Auto,*" Grid.Column="2">
            <DropDown x:Name="themeSelector" SelectedIndex="1" Classes="themes" Grid.Row="0">
                <DropDownItem>Light</DropDownItem>
                <DropDownItem>Dark</DropDownItem>
            </DropDown>
            <views:ThemeEditorView x:Name="editorView" Grid.Row="1"/>
        </Grid>
    </Grid>
</UserControl>
